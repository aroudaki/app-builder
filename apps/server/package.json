{
    "name": "@ai-app-generator/server",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "npm run test:build && npm run test:tools",
        "test:build": "npm run build",
        "test:jest": "jest --passWithNoTests",
        "test:tools": "node test/runAllTests.js",
        "test:container": "node test/containerTest.js",
        "test:browser": "node test/browserTest.js",
        "test:watch": "jest --watch",
        "test:coverage": "npm run build && jest --coverage --passWithNoTests",
        "test:ci": "node scripts/test-workflow.js",
        "verify": "npm run test:ci",
        "lint": "eslint src/**/*.ts",
        "type-check": "tsc --noEmit",
        "pretest": "npm run build",
        "postbuild": "echo 'âœ… Build completed - ready for testing'",
        "prepare": "npm run build"
    },
    "dependencies": {
        "@azure/openai": "^1.0.0-beta.7",
        "@azure/storage-blob": "^12.17.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "langchain": "^0.0.208",
        "multer": "^1.4.5-lts.1",
        "playwright": "^1.40.0",
        "uuid": "^9.0.1",
        "ws": "^8.14.2"
    },
    "devDependencies": {
        "@babel/core": "^7.28.0",
        "@babel/preset-env": "^7.28.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.0",
        "@types/uuid": "^9.0.7",
        "@types/ws": "^8.5.10",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "tsx": "^4.6.0",
        "typescript": "^5.3.0"
    }
}
